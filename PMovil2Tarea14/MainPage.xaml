<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMovil2Tarea14.MainPage">

    <StackLayout>
        <Image x:Name="Foto" HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" BackgroundColor="AliceBlue" />
        <Button x:Name="btnfoto" Text="Agregar foto" Clicked="btnfoto_Clicked" Margin="10,0,10,0" TextColor="Black"/>

        <Label Text="Descripcion:" FontSize="16" TextColor="Black" Margin="5,0,5,0"/>
        <Entry x:Name="txtdescripcion" Placeholder="Ingrese una descripcion" Keyboard="Text" Margin="10,0,10,0" TextColor="Black" FontSize="16"/>
        <!--Botones-->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button x:Name="btnagregar" Text="Agregar" Clicked="btnagregar_Clicked" Margin="10,0,10,0" TextColor="Black"/>
            <Button x:Name="btnlista" Text="Lista" Clicked="btnlista_Clicked" Margin="10,0,10,0" TextColor="Black"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
